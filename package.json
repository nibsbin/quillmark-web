{
  "name": "@quillmark-test/web",
  "version": "0.1.4",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "description": "Opinionated frontend utilities for Quillmark WASM",
  "main": "./dist/lib/index.cjs",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.cjs"
    }
  },
  "files": [
    "dist/lib",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build:lib": "vite build --config vite.config.lib.ts && rm -rf dist/lib/quills dist/lib/usaf_memo",
    "build:playground": "npm run package:quills && vite build",
    "build": "npm run build:lib && npm run build:playground",
    "package:quills": "node scripts/package-quills.js",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "preversion": "npm test",
    "postversion": "git push --follow-tags",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major"
  },
  "keywords": [
    "quillmark",
    "markdown",
    "pdf",
    "typst",
    "wasm",
    "browser"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@quillmark-test/wasm": "^0.1.26",
    "fflate": "^0.8.2"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
