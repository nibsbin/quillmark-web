{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/lib",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/lib/**/*"],
  "exclude": ["src/lib/**/*.test.ts", "src/lib/**/*.spec.ts", "node_modules"]
}
